import React, { Component } from 'react';
import {
  AppRegistry,
  Platform,
  StyleSheet,
  Text,
  View,
  TextInput,
  TouchableOpacity,
  Alert,
  ToolbarAndroid,
} from 'react-native';
import PropTypes from 'prop-types';

class CustomButton extends Component {
  render(){
    const {text, onPress} = this.props;
    return(
		  <TouchableOpacity style={styles.buttonText}
			onPress={() => onPress()}
		  >
			 <Text style={styles.instructions}>{text}</Text>
		  </TouchableOpacity>
    );
  }

}
//Adiciona as propriedades ao botÃ£o
CustomButton.propTypes = {
  text: PropTypes.string.isRequired,
  onPress: PropTypes.func.isRequired
};


export default class TelaInicial extends Component{
  constructor(){
    super();
    this.state ={
      textValue: '',
      validation: false
    }
  }

//Esconde o Navigator Header
  static navigationOptions = {
      header: null
  }

//Recebe o valor do nome
  onChangeText = (textValue) =>{
    if(textValue.trim() != 0){
      this.setState({textValue : textValue, ErrorStatus : true}) ;
    }else{
        this.setState({textValue : textValue, ErrorStatus : false}) ;
    }
  }

  onPress = () =>{
    const { textValue }  = this.state ;
    if (textValue == ""){
      Alert.alert('Aviso', 'Favor preencher o nome');
    }
    else{
      this.props.navigation.navigate('AgendaHorario')
    }
  }
  render(){
    return (
      <View style={styles.container}>        
        <Text style={styles.instructions}>Digite seu nome:</Text>
        <TextInput  style={styles.textboxes}
                    onChangeText={(value) => this.onChangeText(value)
                    } 
        />
        <CustomButton text="Continuar"
                      onPress={() => this.onPress()} 
        />
        <CustomButton text="Sobre"
                     	onPress={() => this.props.navigation.navigate('Notifications')}
        />
      </View>
    );

  }
}

AppRegistry.registerComponent('TelaInicial', () => TelaInicial);


//Folha de estilos
const styles = StyleSheet.create({
  container: {
    flex: 1,
    justifyContent: 'center',
    alignItems: 'center',
    backgroundColor: '#82bbe0',
  },
  instructions: {
    fontFamily: 'Roboto',
    fontSize: 21,
    textAlign: 'center',
    color: '#333333',
    marginBottom: 5,
  },
  textboxes: {
    height: 40,
    width: 250,
    borderColor: 'navy',
    borderWidth: 0,
    backgroundColor: '#b7d5e8',
    fontFamily: 'Roboto',
    textAlign: 'center',
    borderRadius:10,
  },
  buttonText: {
    fontFamily: 'Roboto',
    height: 40,
    width: 250,
    marginTop: 10,
    alignItems: 'center',
    backgroundColor: '#DDDDDD',
    padding: 5,
    borderRadius:10,
  },
  containerToolbar: {
    flex: 1,
    //justifyContent: 'center',
    justifyContent: 'flex-start',
    // https://github.com/facebook/react-native/issues/2957#event-417214498
    alignItems: 'stretch',
    backgroundColor: '#F5FCFF',
  },
  toolbar: {
    backgroundColor: '#2196F3',
    height: 56,
    alignSelf: 'stretch',
    textAlign: 'center',
  },

});

